---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tag-list__container" [ngStyle]="style">
  {(tags ?? []).map((tag: string) => (
  	<span class="tag">{ tag }<span class="tag__background"></span></span>
  ))}
</div>

<style>
  .tag-list__container {
    display: flex;
    gap: .75em;
    font-size: .75em;
    color: #ff69c1;
    flex-wrap: wrap;
  }

  .tag {
    position: relative;
    padding: .2em .5em;
    white-space: nowrap;
  }

  .tag__background {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.3;
    border-radius: 0.1em;
    background-color: #ff69c1;
  }
</style>
