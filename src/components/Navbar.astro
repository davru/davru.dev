---
const { url } = Astro.request

const path = new URL(url).pathname
---

<nav class="nav">
  <div class="nav-logo">
    <h1><a href="/">davru</a></h1>
  </div>
  <div class="nav-links">
    <a href="/" class:list={["nav-link", { active: path == '/' }]}>
      <span class="nav-link-number">01</span><span class="nav-link-text">home</span>
    </a>
    <a href="/blog" class:list={["nav-link", { active: path == '/blog' }]}>
      <span class="nav-link-number">02</span><span class="nav-link-text">blog</span>
    </a>
  </div>
</nav>

<style>
  .nav {
    width: 100%;
    padding: 1.75rem;
    position: absolute;
    color: var(--text-color);
    top: 0; left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo h1 {
    color: var(--color-text-main);
    display: inline-block;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .nav-links {
    display: flex;
    align-items: center;
    font-weight: 500;
    font-size: 1rem;
    gap: 1.5em;
  }

  .nav-link {
   	text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: all .2s ease;
  }

  .nav-link-number {
    font-size: 1em;
    letter-spacing: -1px;
    color: var(--color-text-main);
    margin-right: .5em;
  }

  .nav-link-number::after {
    content: '.';
    margin-left: -.2em;
  }

  @media (min-width: 600px) {
	  .nav {
	    padding: 1.8rem 2.2rem;
		}

  	.nav-links {
	    gap: 2.5em;
    }

    .nav-link:hover > .nav-link-text, .nav-link.active > .nav-link-text {
      text-decoration: line-through;
    }
  }
</style>
