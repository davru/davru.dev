---
import '@fontsource-variable/roboto-mono';

import Navbar from '../components/Navbar.astro';
import Social from '../components/Social.astro';
import Analytics from '../components/Analytics.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar/>

		<main>
			<slot />
		</main>

		<Social />
		<Analytics />
	</body>
</html>

<style is:global>
	:root {
    --bg-color: #23252c;
    --scrollbar-bg: #ffffff;
    --bg-secondary-color: #323744;
    --text-color: #ffffff;
    --color-text-main: #ff69c1;
    --color-text-secondary: #888888;
    --system-fonts: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    --default-fonts: "Roboto Mono", Menlo, Monaco, "Courier New", Courier, monospace;
	}

	* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Roboto Mono", Menlo, Monaco, "Courier New", Courier, monospace;
    scroll-behavior: smooth;
	}

	body {
    background: var(--bg-color);
    height: 100vh;
    height: 100dvh;
	}

	a {
    color: inherit;
    text-decoration: none;
	}

  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 12px;
    border: 4px solid transparent;
    background-color: var(--scrollbar-bg);
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background-color: transparent;
  }
</style>
